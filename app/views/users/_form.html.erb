<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.select :title, ['Mr', 'Mrs', 'Dr.', 'Sir', 'Miss', 'Engr.', 'Arch.', 'Barr.', 'Others'] %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.number_field :phone %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, ['active', 'inactive'] %>
  </div>

  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
