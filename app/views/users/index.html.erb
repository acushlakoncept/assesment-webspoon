<p id="notice"><%= notice %></p>

<nav class="navbar navbar-dark bg-dark justify-content-between">
  <a class="navbar-brand">All Users</a>
    <%# <%= link_to 'Create New User', new_user_path, class: "ml-2 btn btn-success my-2 my-sm-0 text-white" %> 
    <button type="button" class="ml-2 btn btn-success my-2 my-sm-0" data-toggle="modal" data-target="#exampleModal">
        Create New User
    </button>
</nav>
<div class="d-flex justify-content-center m-2">
<%= form_tag(users_path, method: :get, class: "form-inline") do %>
  <%= text_field_tag(:search, params[:search], class: "form-control mr-sm-2", placeholder: "...filter users") %>
  <%= submit_tag ("Search"), class: "btn btn-outline-success my-2 my-sm-0" %>
<% end %>
</div>
<div class="table-responsive">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>SN</th>
      <th><%= link_to "Title", sort: "title"%> &#8593; &#8595;</th>
      <th><%= link_to "Name", sort: "name"%> &#8593; &#8595;</th>
      <th><%= link_to "Email", sort: "email"%> &#8593; &#8595;</th>
      <th><%= link_to "Phone", sort: "phone"%> &#8593; &#8595;</th>
      <th><%= link_to "Status", sort: "status"%> &#8593; &#8595;</th>
      <th colspan="3"></th>
      <%# <th colspan="3"></th> %>
    </tr>
  </thead>

  <tbody>
    <% @users.each_with_index do |user, indx| %>
      <tr>
        <td><%= indx + 1 %></td>
        <td><%= user.title %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td class=<%= "#{user.status == 'active' ? 'text-success' : 'text-danger'}" %> > <%= user.status %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn-sm btn-secondary text-white" %></td>
        <%# <td><%= link_to 'Edit Mod', edit_user_path(user), data: {remote: true, toggle: "modal", target: "#exampleModal"} class: "btn-sm btn-secondary text-white" </td> %>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-danger text-white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination text-center d-flex justify-content-center">
    <%= will_paginate %>
</div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'form', user: @user  %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>